<%= form_with( url: authors_search_path, method: :get) do |f| %>
    <%= f.text_field :last_name, placeholder: "Search"  %>
<% end %>

<script>
    $('#last_name').keyup(function(){
        $.ajax({
            url: "/authors/search",
            type: "GET",
            dataType: "script",
            data: { q:  $("#last_name").val() }
        })
    })
</script>

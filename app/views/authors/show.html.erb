<h1><%= @authors.last_name %></h1>

<table>
  <tr>
    <td>
      <p>Biography: <%= @authors.biography %></p>
    </td>
  </tr>
  <tr>
    <td>
      <p>Country of birth: <%=  @authors.country_of_birth %></p>
    </td>
  </tr>

  <tr>
    <td>
      <% if current_user && current_user.admin %>
      <ul>
        <li><%= link_to 'Edit', edit_author_path(@authors) %></li>
        <li><%= link_to 'Destroy', author_path(@authors),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></li>
      </ul><br>
      <% end %>
    </td>
  </tr>
</table>

<table style="border-collapse: collapse; ">

<% @authors.books.each do |book| %>
  <tr style="border-style: solid; border-width: 1px;">
    <td>
      <% if book.image.attached? %>
        <%= image_tag book.image, :style => "width: 80px; height: 100px" %>
      <% end %>
    </td>
    <td><%= book.title %></td>
    <td> | </td>
    <td><%= book.species %></td>
    <td> | </td>
    <td><%= book.author.last_name %></td>
  </tr>
<% end %>

</table>

<%= link_to "Powrot", authors_path %>
<% if current_user && current_user.admin %>
<h1> Users </h1>

<table style="border-collapse: collapse; ">
    <tr style="border-style: solid; border-width: 1px;">
        <td> Id </td>
        <td>  |  </td>
        <td> Username </td>
        <td>  |  </td>
        <td> Email </td>
        <td>  |  </td>
        <td> Created At </td>
        <td>  |  </td>
        <td> Last Sign In </td>
        <td>  |  </td>
        <td> Admin </td>
        <td>  |  </td>
        <td>  Delete  </td>
    </tr>
    <% @users.each do |user| %>
        <tr style="border-style: solid; border-width: 1px;">
            <td><%= user.id %></td>
            <td>  |  </td>
            <td> <%= user.username %></td>
            <td>  |  </td>
            <td> <%= user.email %></td>
            <td>  |  </td>
            <td> <%= user.created_at.strftime('%B %d %Y at %H:%M:%S') %></td>
            <td>  |  </td>
            <td> <%= user.last_sign_in_at.strftime('%B %d %Y at %H:%M:%S') %></td>
            <td>  |  </td>
            <td> <%= user.admin %> </td>
            <td>  |  </td>
            <td><%= link_to 'Destroy', user_path(user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>
<br>
<%= link_to 'Back to Menu', root_path %>
<% end %>
<% if current_user && current_user.admin %>
<h1> Users </h1>

<table style="border-collapse: collapse; ">
    <tr style="border-style: solid; border-width: 1px;">
        <td> Id </td>
        <td>  |  </td>
        <td> Username </td>
        <td>  |  </td>
        <td> Email </td>
    </tr>
    <% @users.each do |user| %>
        <tr style="border-style: solid; border-width: 1px;">
            <td><%= user.id %></td>
            <td>  |  </td>
            <td> <%= user.username %></td>
            <td>  |  </td>
            <td> <%= user.email %></td>
        </tr>
    <% end %>
</table>
<br>

<h1> Rented Books </h1>

<table style="border-collapse: collapse; ">
    <tr style="border-style: solid; border-width: 1px;">
        <td> Image </td>
        <td>  |  </td>
        <td> Title </td>
        <td>  |  </td>
        <td> Species </td>
        <td>  |  </td>
        <td>  Rented By  </td>
    </tr>
    <% @books.each do |book| %>
        <% if book.status == true %>
            <tr style="border-style: solid; border-width: 1px;">
            <td>
                <% if book.image.attached? %>
                    <%= image_tag book.image, :style => "width: 80px; height: 100px" %>
                <% end %>
            </td>
            <td> | </td>
            <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
            <td> | </td>
            <td><%= book.species %></td>
            <td> | </td>
            <td><%= book.user.email %></td>
            </tr>
        <% end %>
    <% end %>
</table>

<br>
<%= link_to 'Back to Menu', root_path %>
<% end %>
<%= form_with model: [@books, @books.comments.build], remote: true do |f| %>

  <p> 
    <%= f.label :user_id, 'Username: ' %><br>
    <%= f.hidden_field :user_id %> 
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :rate %><br>
    <%= f.number_field :rate, in: 1..10, value: 1 %>
  </p>
  <p>
    <%= f.submit "Add comment" %>
  </p>
<% end %>
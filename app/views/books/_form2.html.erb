<%= form_with model: [@books, @books.comments.build] do |f| %>

  <p> 
    <%= f.label :name %><br>
    <%= f.hidden_field :name, value: current_user.username %> 
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :rate %><br>
    <%= f.number_field :rate, in: 1..10, value: 1 %>
  </p>
  <p>
    <%= f.submit "Add comment" %>
  </p>
<% end %>